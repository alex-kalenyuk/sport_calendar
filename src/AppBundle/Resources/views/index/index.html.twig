{% extends 'AppBundle::layout.html.twig' %}

{% block content %}

    <table>
        <thead>
        <tr>
            <th>{{ '2 weeks ago'|trans }}</th>
            <th>{{ 'week ago'|trans }}</th>
            <th>{{ 'today'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <td>
                <table>
                    {% for exercise in exercises[0] %}
                        <tr>
                            <td>{{ exercise.description }}</td>
                            <td>{{ exercise.weight }} x {{ exercise.count }}</td>
                        </tr>
                    {% endfor %}
                </table>
            </td>
            <td>
                <table>
                    {% for exercise in exercises[1] %}
                        <tr>
                            <td>{{ exercise.description }}</td>
                            <td>{{ exercise.weight }} x {{ exercise.count }}</td>
                        </tr>
                    {% endfor %}
                </table>
            </td>
            <td>
                <table>
                    {% for exercise in exercises[2] %}
                        <tr>
                            <td>{{ exercise.description }}</td>
                            <td>{{ exercise.weight }} x {{ exercise.count }}</td>
                        </tr>
                    {% endfor %}
                </table>
            </td>
        </tr>
        </tbody>
    </table>

{% endblock %}