{% extends 'AppBundle::layout.html.twig' %}

{% block content %}

    <table>
        <thead>
        <tr>
            <th>{{ '2 weeks ago'|trans }}</th>
            <th>{{ 'week ago'|trans }}</th>
            <th>{{ 'today'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <td>
                <table>
                    {% for exercise in exercises[constant('AppBundle\\Services\\ExerciseService::TWO_WEEKS_AGO')] %}
                        <tr>
                            <td>{{ exercise.description }}</td>
                            <td>{{ exercise.weight }} x {{ exercise.count }}</td>
                        </tr>
                    {% endfor %}
                </table>
            </td>
            <td>
                <table>
                    {% for exercise in exercises[constant('AppBundle\\Services\\ExerciseService::WEEK_AGO')] %}
                        <tr>
                            <td>{{ exercise.description }}</td>
                            <td>{{ exercise.weight }} x {{ exercise.count }}</td>
                        </tr>
                    {% endfor %}
                </table>
            </td>
            <td>
                <table>
                    {% for exercise in exercises[constant('AppBundle\\Services\\ExerciseService::TODAY')] %}
                        <tr>
                            <td>{{ exercise.description }}</td>
                            <td>{{ exercise.weight }} x {{ exercise.count }}</td>
                        </tr>
                    {% endfor %}
                </table>
            </td>
        </tr>
        </tbody>
    </table>

    <p>
        <a href="{{ logout_path('default') }}">Logout</a>
    </p>

{% endblock %}